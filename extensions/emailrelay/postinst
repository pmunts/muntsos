mkdir -p /usr/local/etc

# Create initial emailrelay.auth, if necessary

if [ ! -f /usr/local/etc/emailrelay.auth ]; then
  cat <<EOD >/usr/local/etc/emailrelay.auth
client plain username password
EOD
  chmod 400 /usr/local/etc/emailrelay.auth
fi

# Create initial emailrelay.conf, if necessary

if [ ! -f /usr/local/etc/emailrelay.conf ]; then
  cat <<EOD >/usr/local/etc/emailrelay.conf
as-proxy servername:port
client-auth /usr/local/etc/emailrelay.auth
client-tls
client-tls-required
spool-dir /var/spool/emailrelay
EOD
  chmod 444 /usr/local/etc/emailrelay.conf
fi
