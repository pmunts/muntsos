# Create mailtunnel user

adduser -h /home/mailtunnel -g "Mail Tunnel" -s /bin/sh -D -H -u 555 mailtunnel
chown -R mailtunnel:mailtunnel /home/mailtunnel
chmod -R ugo-w /home/mailtunnel

# Add entry to inetd.conf

test -f /etc/inetd.conf || touch /etc/inetd.conf

grep -q 'Redirect port 25 to munts.net:25' /etc/inetd.conf

if [ $? -ne 0 ]; then
  cat <<EOD >>/etc/inetd.conf

# Redirect port 25 to munts.net:25 
127.0.0.1:25 stream tcp nowait mailtunnel /usr/bin/ssh -q -T munts.net
EOD
fi

# Add entry to ssh_known_hosts

test -f /etc/ssh/ssh_known_hosts || touch /etc/ssh_known_hosts

grep -q 'munts.net' /etc/ssh/ssh_known_hosts

if [ $? -ne 0 ]; then
  cat <<EOD >>/etc/ssh/ssh_known_hosts
  echo "@@SERVERKEY@@" >>/etc/ssh/ssh_known_hosts
EOD
fi

# Save changes

sysconfig --save
