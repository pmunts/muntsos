/* Device tree overlay for the Mikroelektronika Pi 4 Click Shield (MIKROE-4122). */

/dts-v1/;
/plugin/;

/ {
	compatible = "brcm,bcm2711";

	// Create a fictitious voltage regulator for the ADS1115 reference

	fragment@0 {
		target-path = "/";
		__overlay__ {
			piclick4_vref: piclick4-vref {
				compatible = "regulator-fixed";
				regulator-name = "piclick4_ads1115";
				regulator-min-microvolt = <4096000>;
				regulator-max-microvolt = <4096000>;
				regulator-always-on;
				status = "okay";
 			};
		};
	};

	/* Enable ADS1115 A/D Converter, 0.000 to 4.096 V full scale, 0.125 uV per step */

	fragment@1 {
		target = <&ads1115>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;

			channel_a: channel_a {
				reg = <4>;
				ti,gain = <1>;
				ti,datarate = <7>;
			};
		};
	};

	fragment@2 {
		target = <&ads1115>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;

			channel_b: channel_b {
				reg = <5>;
				ti,gain = <1>;
				ti,datarate = <7>;
			};
		};
	};

	fragment@3 {
		target = <&ads1115>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;

			channel_c: channel_c {
				reg = <6>;
				ti,gain = <1>;
				ti,datarate = <7>;
			};
		};
	};

	fragment@4 {
		target = <&ads1115>;
		__dormant__ {
			#address-cells = <1>;
			#size-cells = <0>;

			channel_d: channel_d {
				reg = <7>;
				ti,gain = <3>;
				ti,datarate = <7>;
			};
		};
	};

	fragment@5 {
		target = <&i2c_arm>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;
			status = "okay";

			ads1115: ads1115@48 {
				compatible = "ti,ads1115";
				status = "okay";
				#address-cells = <1>;
				#size-cells = <0>;
				reg = <0x48>;
				vref-supply = <&piclick4_vref>;
			};
		};
	};

	/* Enable pwmchip0 but don't claim any GPIO pins */

	fragment@6 {
		target = <&pwm>;
		__overlay__ {
			assigned-clock-rates = <100000000>;
			status = "okay";
		};
	};

        /* Enable GPIO20 fan control */

	fragment@7 {
		target-path = "/";
		__overlay__ {
			fan0: gpio-fan@0 {
				compatible = "gpio-fan";
				gpios = <&gpio 20 0>;
				gpio-fan,speed-map = <0    0>, <5000 1>;
				#cooling-cells = <2>;
			};
		};
	};

	fragment@8 {
		target = <&cpu_thermal>;
		__overlay__ {
			polling-delay = <2000>;	/* milliseconds */
		};
	};

	fragment@9 {
		target = <&thermal_trips>;
		__overlay__ {
			cpu_hot: trip-point@0 {
				temperature = <52000>;	/* (millicelsius) Fan started at 52°C */
				hysteresis = <5000>;	/* (millicelsius) Fan stopped at 47°C */
				type = "active";
			};
		};
	};

	fragment@10 {
		target = <&cooling_maps>;
		__overlay__ {
			map0 {
				trip = <&cpu_hot>;
				cooling-device = <&fan0 1 1>;
			};
		};
	};
};
